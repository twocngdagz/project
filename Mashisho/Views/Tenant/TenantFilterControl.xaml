<UserControl x:Class="Mashisho.TenantFilterControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d">
             <!-- " d:DesignHeight="143" d:DesignWidth="454" -->
    <Grid>
        <Border Margin="4" BorderThickness="2" CornerRadius="15" HorizontalAlignment="Stretch" Background="#FFDE6565" BorderBrush="Black">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="71*" />
                </Grid.RowDefinitions>
                <StackPanel Name="stackPanel1" Orientation="Horizontal">
                    <Label Content="Name" Name="label1" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="7" />
                    <TextBox Name="textBox1" VerticalAlignment="Center" HorizontalAlignment="Left" Width="207" Margin="7" Text="{Binding Name}"/>
                    <CheckBox Content="Active?" Height="16" Name="checkBox1" IsChecked="{Binding IsActive}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
